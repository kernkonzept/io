#pragma once

#include <l4/cxx/ipc_stream>
#include <l4/vbus/vbus_types.h>
#include <l4/vbus/vbus>

inline void
l4vbus_device_msg(l4vbus_device_handle_t handle, l4_uint32_t op,
                  L4::Ipc::Iostream &s)
{
  s << handle << op;
}
